@model Character


<form method="post" asp-action="EditPost">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Character</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="HitPoits"></label>
            <input asp-for="HitPoits" class="form-control" />
            <span asp-validation-for="HitPoits" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Strength"></label>
            <input asp-for="Strength" class="form-control" />
            <span asp-validation-for="Strength" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Defence"></label>
            <input asp-for="Defence" class="form-control" />
            <span asp-validation-for="Defence" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Intelligence"></label>
            <input asp-for="Intelligence" class="form-control" />
            <span asp-validation-for="Intelligence" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Class"></label>
            <input asp-for="Class" class="form-control" />
            <span asp-validation-for="Class" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary" style="width:150px" >Update</button>
        <a asp-controller="Character" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
