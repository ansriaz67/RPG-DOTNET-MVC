@model User


<form method="post" asp-action="DeletePost">
    <input hidden asp-for="Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Character</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="UserName"></label>
            <input asp-for="UserName" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" disabled />
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px" >Delete</button>
        <a asp-controller="User" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
    </div>
</form>
